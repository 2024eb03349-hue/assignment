#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <signal.h>
#include <sys/wait.h>
#include <sys/types.h>

volatile sig_atomic_t sigterm_received = 0;
volatile sig_atomic_t sigint_received = 0;

// Signal handler for SIGTERM
void sigterm_handler(int signum) {
    sigterm_received = 1;
    printf("Parent received SIGTERM (signal %d)\n", signum);
}

// Signal handler for SIGINT
void sigint_handler(int signum) {
    sigint_received = 1;
    printf("Parent received SIGINT (signal %d)\n", signum);
}

int main() {
    pid_t pid1, pid2;
    
    printf("Parent process started with PID: %d\n", getpid());
    
    // Set up signal handlers
    signal(SIGTERM, sigterm_handler);
    signal(SIGINT, sigint_handler);
    
    // Create first child to send SIGTERM after 5 seconds
    pid1 = fork();
    
    if (pid1 < 0) {
        perror("First fork failed");
        exit(1);
    } else if (pid1 == 0) {
        // First child process
        printf("Child 1 (SIGTERM sender) PID: %d\n", getpid());
        sleep(5);
        printf("Child 1: Sending SIGTERM to parent PID %d\n", getppid());
        kill(getppid(), SIGTERM);
        exit(0);
    }
    
    // Create second child to send SIGINT after 10 seconds
    pid2 = fork();
    
    if (pid2 < 0) {
        perror("Second fork failed");
        exit(1);
    } else if (pid2 == 0) {
        // Second child process
        printf("Child 2 (SIGINT sender) PID: %d\n", getpid());
        sleep(10);
        printf("Child 2: Sending SIGINT to parent PID %d\n", getppid());
        kill(getppid(), SIGINT);
        exit(0);
    }
    
    // Parent process runs indefinitely until signals received
    printf("Parent waiting for signals...\n");
    
    while (1) {
        if (sigterm_received) {
            printf("Parent: Handling SIGTERM - preparing for graceful shutdown...\n");
            // Cleanup operations can be added here
            break;
        }
        
        if (sigint_received) {
            printf("Parent: Handling SIGINT - initiating immediate shutdown...\n");
            // Cleanup operations can be added here
            break;
        }
        
        // Simulate parent doing some work
        printf("Parent: Still running...\n");
        sleep(1);
    }
    
    // Wait for children to prevent zombies
    wait(NULL);
    wait(NULL);
    
    printf("Parent exiting gracefully.\n");
    return 0;
}
